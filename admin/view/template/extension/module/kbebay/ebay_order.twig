{{ header }}{{ column_left }} 
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-ebay-order" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
            </div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %} 
                    <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
                {% endfor %} 
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if (error_warning is defined and error_warning != "") %} 
            <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }} 
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %} 
        {% if (success is defined and success != '') %} 
            <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }} 
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %} 
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit_order }}</h3>
            </div>
            <div class="panel-body">
                {{ tab_common }} 
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-ebay-order" class="form-horizontal">
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="ebay-order-default-status">
                            <span data-toggle="tooltip" title="" data-original-title="{{ text_status_order_default_hint }}">{{ text_status_order_default }}</span>
                            
                        </label>
                        <div class="col-sm-10">
                            <select name="ebay[order][default_status]" id="ebay-order-default-status" class="form-control">
                                <option value="">{{ text_select }}</option>
                                {% for order_status in order_statuses %} 
                                    {% if (order_status['order_status_id'] == ebay_order_default_status_id) %} 
                                        <option value="{{ order_status['order_status_id'] }}" selected="selected">{{ order_status['name'] }}</option>
                                    {% else %} 
                                        <option value="{{ order_status['order_status_id'] }}">{{ order_status['name'] }}</option>
                                    {% endif %} 
                                {% endfor %} 
                            </select>
                            {% if (error_ebay_default_status) %} 
                                <div class="text-danger">{{ error_ebay_paid_status }}</div>
                            {% endif %} 
                        </div>
                    </div>
<!--                    <div class="form-group required" style="display: none">
                        <label class="col-sm-2 control-label" for="ebay-order-cancelled-status">
                            <span data-toggle="tooltip" title="" data-original-title="{{ text_status_order_cancelled_hint }}">{{ text_status_order_cancelled }}</span>
                        </label>
                        <div class="col-sm-10">
                            <select name="ebay[order][cancel_status][]" id="ebay-order-cancelled-status" class="form-control" multiple="5">
                                {% for order_status in order_statuses %} 
                                    {% if order_status['order_status_id'] in ebay_order_cancel_status_id %}
                                        <option value="{{ order_status['order_status_id'] }}" selected="selected">{{ order_status['name'] }}</option>
                                    {% else %} 
                                        <option value="{{ order_status['order_status_id'] }}">{{ order_status['name'] }}</option>
                                    {% endif %} 
                                {% endfor %} 
                            </select>
                            {% if (error_ebay_cancelled_status) %} 
                                <div class="text-danger">{{ error_ebay_cancelled_status }}</div>
                            {% endif %} 
                        </div>
                    </div>-->
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="ebay-order-shipped-status">
                            <span data-toggle="tooltip" title="" data-original-title="{{ text_status_order_shipped_hint }}">{{ text_status_order_shipped }}</span>
                        </label>
                        <div class="col-sm-10">
                            <select name="ebay[order][shipped_status][]" id="ebay-order-shipped-status" class="form-control" multiple="5">
                                {% for order_status in order_statuses %} 
                                    {% if order_status['order_status_id'] in ebay_order_shipped_status_id %}
                                        <option value="{{ order_status['order_status_id'] }}" selected="selected">{{ order_status['name'] }}</option>
                                    {% else %} 
                                        <option value="{{ order_status['order_status_id'] }}">{{ order_status['name'] }}</option>
                                    {% endif %} 
                                {% endfor %} 
                            </select>
                            {% if (error_ebay_shipped_status) %} 
                                <div class="text-danger">{{ error_ebay_shipped_status }}</div>
                            {% endif %} 
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{ footer }}