{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-wkpos" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
        <a href="{{ front_end }}" class="pull-right btn btn-warning" style="margin-top: -8px; font-weight: bold;" target="_blank">{{ text_pos_front }}</a>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-wkpos" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="module_wkpos_status" id="input-status" class="form-control">
                {% if module_wkpos_status %}
                <option value="0">{{ text_disabled }}</option>
                <option value="1" selected="selected">{{ text_enabled }}</option>
                {% else %}
                <option value="0" selected="selected">{{ text_disabled }}</option>
                <option value="1">{{ text_enabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>

          <ul class="nav nav-tabs">
            <li class="active"><a href="#tab-general" data-toggle="tab">{{ tab_general }}</a></li>
            <li><a href="#tab-customer" data-toggle="tab">{{ tab_customer }}</a></li>
            <li><a href="#tab-payment" data-toggle="tab">{{ tab_payment }}</a></li>
            <li><a href="#tab-shipping" data-toggle="tab">{{ tab_shipping }}</a></li>
            <li><a href="#tab-receipt" data-toggle="tab">{{ tab_receipt }}</a></li>
            <li><a href="#tab-barcode" data-toggle="tab">{{ tab_barcode }}</a></li>
              <li><a href="#manifest" data-toggle="tab">{{ tab_manifest }}</a></li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane active" id="tab-general">
              <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-store-country">{{ entry_store_country }}</label>
                <div class="col-sm-10">
                  <select name="wkpos_store_country_id" id="input-store-country" class="form-control">
                    <option value="">{{ text_select }}</option>
                    {% for country in countries %}
                    {% if country.country_id == wkpos_store_country_id %}
                    <option value="{{ country.country_id }}" selected="selected">{{ country.name }}</option>
                    {% else %}
                    <option value="{{ country.country_id }}">{{ country.name }}</option>
                    {% endif %}
                    {% endfor %}
                  </select>
                  {% if error_store_country %}
                  <div class="text-danger">{{ error_store_country }}</div>
                  {% endif %}
                </div>
              </div>
              <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-store-zone">{{ entry_store_zone }}</label>
                <div class="col-sm-10">
                  <select name="wkpos_store_zone_id" id="input-store-zone" class="form-control">
                  </select>
                  {% if error_store_zone %}
                  <div class="text-danger">{{ error_store_zone }}</div>
                  {% endif %}
                </div>
              </div>
              <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-heading"><span data-toggle="tooltip" title="{{ help_heading }}">{{ entry_heading }}</span></label>
                <div class="col-sm-10">
                  {% for language in languages %}
                  <div class="input-group">
                    <span class="input-group-addon" data-toggle="tooltip" title="{{ language['name'] }}"><img src="language/{{ language['code'] }}/{{ language['code'] }}.png" alt="{{ language['name'] }}"></span>
                    <input type="text" name="wkpos_heading{{ language['language_id'] }}" value="{{ wkpos_heading[language['language_id']] }}" placeholder="{{ entry_heading }}" id="input-heading{{ language['language_id'] }}" class="form-control" />
                  </div>
                    {% if error_heading[language['language_id']] %}
                      <div class="text-danger">{{ error_heading[language['language_id']] }}</div>
                    {% endif %}
                  {% endfor %}
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-sub-heading"><span data-toggle="tooltip" title="{{ help_sub_heading }}">{{ entry_sub_heading }}</span></label>
                <div class="col-sm-10">
                  {% for language in languages %}
                  <div class="input-group">
                    <span class="input-group-addon" data-toggle="tooltip" title="{{ language['name'] }}"><img src="language/{{ language['code'] }}/{{ language['code'] }}.png" alt="{{ language['name'] }}"></span>
                    <input type="text" name="wkpos_sub_heading{{ language['language_id'] }}" value="{{ wkpos_sub_heading[language['language_id']] }}" placeholder="{{ entry_sub_heading }}" id="input-sub-heading{{ language['language_id'] }}" class="form-control" />
                  </div>
                    {% if error_sub_heading[language['language_id']] %}
                      <div class="text-danger">{{ error_sub_heading[language['language_id']] }}</div>
                    {% endif %}
                  {% endfor %}
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-logcontent"><span data-toggle="tooltip" title="{{ help_logcontent }}">{{ entry_logcontent }}</span></label>
                <div class="col-sm-10">
                  <ul class="nav nav-tabs">
                    {% set lang_key = 0 %}
                    {% for key, language in languages %}
                      <li{% if lang_key == 0 %}{{ ' class="active"' }}{% endif %}><a href="#tab-logcontent{{ language['language_id'] }}" data-toggle="tab"><img src="language/{{ language['code'] }}/{{ language['code'] }}.png" alt="{{ language['name'] }}"> {{ language['name'] }}</a></li>
                      {% set lang_key = lang_key + 1 %}
                    {% endfor %}
                  </ul>
                  <div class="tab-content">
                    {% set lang_key = 0 %}
                    {% for key, language in languages %}
                      <div class="tab-pane{% if lang_key == 0 %}{{ " active" }}{% endif %}" id="tab-logcontent{{ language['language_id'] }}">
                        <textarea name="wkpos_logcontent{{ language['language_id'] }}" placeholder="{{ entry_logcontent }}" id="input-logcontent" class="form-control" data-toggle="summernote" data-lang="{{ summernote }}" rows="6">{{ wkpos_logcontent[language['language_id']] }}</textarea>
                        {% if error_logcontent[language['language_id']] %}
                          <div class="text-danger">{{ error_logcontent[language['language_id']] }}</div>
                        {% endif %}
                      </div>
                      {% set lang_key = lang_key + 1 %}
                    {% endfor %}
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-populars"><span data-toggle="tooltip" title="{{ help_populars }}">{{ entry_populars }}</span></label>
                <div class="col-sm-10">
                  <input type="number" name="wkpos_populars" value="{{ wkpos_populars }}" placeholder="{{ entry_populars }}" id="input-populars" min="0" onkeypress="javascript:return validate(event, this, true)" class="form-control" />
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-low-stock"><span data-toggle="tooltip" title="{{ help_low_stock }}">{{ entry_low_stock }}</span></label>
                <div class="col-sm-10">
                  <input type="number" name="wkpos_low_stock" value="{{ wkpos_low_stock }}" placeholder="{{ entry_low_stock }}" min="0" id="input-low-stock" class="form-control" onkeypress="return validate(event, this, true)"/>
                  {% if error_low_stock %}
                  <div class="text-danger">{{ error_low_stock }}</div>
                  {% endif %}
                </div>
              </div>
              {% if pricelist_status %}
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-price-list"><span data-toggle="tooltip" title="{{ help_price_list }}">{{ entry_price_list_status }}</span></label>
                <div class="col-sm-10">
                  <select class="form-control" name="wkpos_price_list_satus">
                    <option {% if wkpos_price_list_satus == 1 %}selected{% endif %} value="1">{{ text_enabled }}</option>
                    <option {% if wkpos_price_list_satus == 0 %}selected{% endif %} value="0">{{ text_disabled }}</option>
                  </select>
                </div>
              </div>
              {% endif %}
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-show-whole"><span data-toggle="tooltip" title="{{ help_show_whole }}">{{ entry_show_whole }}</span></label>
                <div class="col-sm-10">
                  <label class="radio-inline">
                    {% if wkpos_show_whole %}
                    <input type="radio" name="wkpos_show_whole" value="1" checked="checked" />
                    {{ text_yes }}
                    {% else %}
                    <input type="radio" name="wkpos_show_whole" value="1" />
                    {{ text_yes }}
                    {% endif %}
                  </label>
                  <label class="radio-inline">
                    {% if not wkpos_show_whole %}
                    <input type="radio" name="wkpos_show_whole" value="0" checked="checked" />
                    {{ text_no }}
                    {% else %}
                    <input type="radio" name="wkpos_show_whole" value="0" />
                    {{ text_no }}
                    {% endif %}
                  </label>
                </div>
              </div>
              <div class="form-group">
                <label for="input-outlet" class="col-sm-2 control-label"><span data-toggle="tooltip" title="{{ help_outlet }}">{{ entry_outlet }}</span></label>
                <div class="col-sm-10">
                  <select class="form-control" name="wkpos_default_outlet">
                    <option value="0">{{ text_select_outlet }}</option>
                    {% for outlet in outlets %}
                      <option{% if wkpos_default_outlet == outlet['outlet_id'] %}{{ ' selected' }}{% endif %} value="{{ outlet['outlet_id'] }}">{{ outlet['name'] }}</option>
                    {% endfor %}
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-show-lowstockproduct">{{ entry_show_lowstock_prod }}</label>
                <div class="col-sm-10">
                  <label class="radio-inline">
                    {% if wkpos_show_lowstock_prod %}
                    <input type="radio" name="wkpos_show_lowstock_prod" value="1" checked="checked" />
                    {{ text_yes }}
                    {% else %}
                    <input type="radio" name="wkpos_show_lowstock_prod" value="1" />
                    {{ text_yes }}
                    {% endif %}
                  </label>
                  <label class="radio-inline">
                    {% if not wkpos_show_lowstock_prod %}
                    <input type="radio" name="wkpos_show_lowstock_prod" value="0" checked="checked" />
                    {{ text_no }}
                    {% else %}
                    <input type="radio" name="wkpos_show_lowstock_prod" value="0" />
                    {{ text_no }}
                    {% endif %}
                  </label>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-email-agent">{{ entry_email_agent }}</label>
                <div class="col-sm-10">
                  <label class="radio-inline">
                    {% if wkpos_email_agent %}
                    <input type="radio" name="wkpos_email_agent" value="1" checked="checked" />
                    {{ text_yes }}
                    {% else %}
                    <input type="radio" name="wkpos_email_agent" value="1" />
                    {{ text_yes }}
                    {% endif %}
                  </label>
                  <label class="radio-inline">
                    {% if not wkpos_email_agent %}
                    <input type="radio" name="wkpos_email_agent" value="0" checked="checked" />
                    {{ text_no }}
                    {% else %}
                    <input type="radio" name="wkpos_email_agent" value="0" />
                    {{ text_no }}
                    {% endif %}
                  </label>
                </div>
              </div>
            </div>
            <div class="tab-pane" id="tab-customer">
              <legend>{{ text_new_customer }}</legend>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-new-customer-group"><span data-toggle="tooltip" title="{{ help_new_group }}">{{ entry_customer_group }}</label>
                <div class="col-sm-10">
                  <select name="wkpos_new_customer_group_id" id="input-new-customer-group" class="form-control">
                    {% for customer_group in customer_groups %}
                    {% if customer_group.customer_group_id == wkpos_new_customer_group_id %}
                    <option value="{{ customer_group.customer_group_id }}" selected="selected">{{ customer_group.name }}</option>
                    {% else %}
                    <option value="{{ customer_group.customer_group_id }}">{{ customer_group.name }}</option>
                    {% endif %}
                    {% endfor %}
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-newsletter"><span data-toggle="tooltip" title="{{ help_newsletter }}">{{ entry_newsletter }}</span></label>
                <div class="col-sm-10">
                  <select name="wkpos_newsletter" id="input-newsletter" class="form-control">
                    {% if wkpos_newsletter %}
                    <option value="0">{{ text_disabled }}</option>
                    <option value="1" selected="selected">{{ text_enabled }}</option>
                    {% else %}
                    <option value="0" selected="selected">{{ text_disabled }}</option>
                    <option value="1">{{ text_enabled }}</option>
                    {% endif %}
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-password"><span data-toggle="tooltip" title="{{ help_password }}">{{ entry_password }}</span></label>
                <div class="col-sm-10">
                  <input type="text" name="wkpos_customer_password" value="{{ wkpos_customer_password }}" placeholder="{{ entry_password }}" id="input-password" class="form-control" />
                </div>
              </div>
              <legend>{{ text_default_customer }}</legend>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-customer-group">{{ entry_customer_group }}</label>
                <div class="col-sm-10">
                  <select name="wkpos_customer_group_id" id="input-customer-group" class="form-control">
                    {% for customer_group in customer_groups %}
                    {% if customer_group.customer_group_id == wkpos_customer_group_id %}
                    <option value="{{ customer_group.customer_group_id }}" selected="selected">{{ customer_group.name }}</option>
                    {% else %}
                    <option value="{{ customer_group.customer_group_id }}">{{ customer_group.name }}</option>
                    {% endif %}
                    {% endfor %}
                  </select>
                </div>
              </div>
              <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-firstname">{{ entry_firstname }}</label>
                <div class="col-sm-10">
                  <input type="text" name="wkpos_firstname" value="{{ wkpos_firstname }}" placeholder="{{ entry_firstname }}" id="input-firstname" class="form-control" />
                  {% if error_firstname %}
                  <div class="text-danger">{{ error_firstname }}</div>
                  {% endif %}
                </div>
              </div>
              <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-lastname">{{ entry_lastname }}</label>
                <div class="col-sm-10">
                  <input type="text" name="wkpos_lastname" value="{{ wkpos_lastname }}" placeholder="{{ entry_lastname }}" id="input-lastname" class="form-control" />
                  {% if error_lastname %}
                  <div class="text-danger">{{ error_lastname }}</div>
                  {% endif %}
                </div>
              </div>
              <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-email">{{ entry_email }}</label>
                <div class="col-sm-10">
                  <input type="text" name="wkpos_email" value="{{ wkpos_email }}" placeholder="{{ entry_email }}" id="input-email" class="form-control" />
                  {% if error_email %}
                  <div class="text-danger">{{ error_email }}</div>
                  {% endif %}
                </div>
              </div>
              <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-telephone">{{ entry_telephone }}</label>
                <div class="col-sm-10">
                  <input type="text" name="wkpos_telephone" value="{{ wkpos_telephone }}" placeholder="{{ entry_telephone }}" id="input-telephone" class="form-control" />
                  {% if error_telephone %}
                  <div class="text-danger">{{ error_telephone }}</div>
                  {% endif %}
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-fax">{{ entry_fax }}</label>
                <div class="col-sm-10">
                  <input type="text" name="wkpos_fax" value="{{ wkpos_fax }}" placeholder="{{ entry_fax }}" id="input-fax" class="form-control" />
                </div>
              </div>
              <legend>{{ text_default_address }}</legend>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-company">{{ entry_company }}</label>
                <div class="col-sm-10">
                  <input type="text" name="wkpos_company" value="{{ wkpos_company }}" placeholder="{{ entry_company }}" id="input-company" class="form-control" />
                </div>
              </div>
              <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-address-1">{{ entry_address_1 }}</label>
                <div class="col-sm-10">
                  <input type="text" name="wkpos_address_1" value="{{ wkpos_address_1 }}" placeholder="{{ entry_address_1 }}" id="input-address-1" class="form-control" />
